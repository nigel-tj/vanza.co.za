#services
  .container
    .row
.container
  %h1 New video
  = form_for @video do |f|
    = render 'shared/errors', object: @video
    .form-group
      = f.label :link, :class => "control-label col-sm-2"
      .col-sm-10
        = f.text_field :link, class: 'form-control', required: true
        %span.help-block A link to the video on YouTube.
    .form-group
      = f.label :category, :class => "control-label col-sm-2"
      .col-sm-10 
        = f.submit class: 'btn btn-primary'
