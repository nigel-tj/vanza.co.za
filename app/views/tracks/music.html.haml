.container
  / start news tabs
  #gallery
    / banner
    .row
      .col-sm-12.banner
        %img.img-responsive{:alt => "image", :src => "http://www.redvillage.co.za/uploads/main_banner/image/21/RCV_7STARS_scampD.jpg"}
    / banner end
    / start services
    .row
      .col-sm-9.services
        .row
          .col-sm-12
            .tabs.tabs-style-linebox.wow.fadeInUp{"data-wow-duration" => "2s"}
              %nav.pull-right
                %ul.content_filter
                  %li.hvr-sweep-to-top.active.filter{"data-filter" => ".rcv_playlist", :id => "#rcv_playlist"}
                    %span RCV Playlist
                  %li.hvr-sweep-to-top.filter{"data-filter" => ".albums_mixtapes", :id => "#albums"}
                    %span Albums / Mixtapes

          .col-sm-12#gallery-content
            .grid
              - for track in @tracks
                - if(track.category == "rcv_playlist")
                  .grid-item.grid-sizer.col-sm-4.servicebox.rcv_playlist
                    .servicebox-image
                      %a.vid-item.pretty-photo{"data-gal" => "prettyPhoto[gallery-photo-thumb]", :href => "#", :onclick => "playSong()"}
                        %img{:alt => "#{track.title}", :src => "#{track.image_url(:thumb)}"}
                    .servicebox-inner
                      %p
                        #{track.title}

              -for album in @albums 
                .grid-item.grid-sizer.col-sm-4.servicebox.albums_mixtapes
                  .servicebox-image
                    %a.vid-item.pretty-photo{"data-gal" => "prettyPhoto[gallery-photo-thumb]", :href => "#", :onclick => "playSong()"}
                      %img{:alt => "#{track.title}", :src => "#{track.image_url(:thumb)}"}
                  .servicebox-inner
                    %p
                      #{track.title}

        / Adverts
      .col-sm-3
        .side-adverts
          %ul.advert-image
            %li
              %img.img-responsive{:alt => "image", :src => "http://www.redvillage.co.za/uploads/main_banner/image/20/davincii_cropped.jpg"}
            %li
              %img.img-responsive{:alt => "image", :src => "http://www.redvillage.co.za/uploads/main_banner/image/16/COUSIN_JMF_do_it_like_boss_banner_redcup.jpg"}
        / Adverts
      .col-sm-3
        .side-adverts
          %ul.advert-image
            %li
              %img.img-responsive{:alt => "image", :src => "http://www.redvillage.co.za/uploads/main_banner/image/20/davincii_cropped.jpg"}
            %li
              %img.img-responsive{:alt => "image", :src => "http://www.redvillage.co.za/uploads/main_banner/image/16/COUSIN_JMF_do_it_like_boss_banner_redcup.jpg"}
        / Adverts
      .col-sm-3
        .side-adverts
          %ul.advert-image
            %li
              %img.img-responsive{:alt => "image", :src => "http://www.redvillage.co.za/uploads/main_banner/image/20/davincii_cropped.jpg"}
            %li
              %img.img-responsive{:alt => "image", :src => "http://www.redvillage.co.za/uploads/main_banner/image/16/COUSIN_JMF_do_it_like_boss_banner_redcup.jpg"}

:javascript
  function playSong() {
    document.getElementById("audio_player").src = "https://raw.githubusercontent.com/kolber/audiojs/master/mp3/bensound-dubstep.mp3";
  }

  $(document).ready(function(){    
    document.getElementById('#rcv_playlist').classList.add("active");
    $('.grid').masonry({
      // options...
      itemSelector: '.grid-item',
      columnWidth: '.grid-sizer',
      percentPosition: true
    });

  })
    
}
