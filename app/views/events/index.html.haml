/ Event of the month
.container
  #events
    .row
      .col-sm-12
        %h1.wow.fadeInUp{"data-wow-duration" => "1s"} EVENTS OF THE MONTH      
      %ul.event-inner.bxslider.one
        -for event in @events
          %li.col-sm-6
            .event-box.row.text-center
              .event-box-left.col-sm-6.col-md-3
                %h2
                  29
                  %br/
                  %span.month APRIL
                %h3 11:00 PM
                %p
                  %i.fa.fa-map-marker
                  %br/
                  CITY PLAZA,
                  = succeed "NEW" do
                    %br/
              .event-box-right.col-sm-6.col-md-9
                %img.img-responsive{:alt => "#{event.name}", :src => "#{event.image_url(:thumb)}"}/
              .event-box-bottom.clearfix
                %h2 #{event.name}
