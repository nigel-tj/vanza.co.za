#services
  .container
    .row
    #gallery.text-center
      #services
        .container
          .row
            %h2 #{@gallery.name}
          #gallery.text-center
            .container-fluid
              .row.gallery.text-center
                .col-md-12.noPadding
                  .gallery-photo-grid
                    .gallery-photos
                      .gallery-photos-thumb
                        - for image in @gallery.images
                          .gallery-photo-item.mix.new.fadeIn
                            %a.pretty-photo{"data-gal" => "prettyPhoto[gallery-photo-thumb]", :href => image.image_url}
                              .photo-thumb
                                = image_tag image.image_url(:thumb) if image.image?
                              .overlay
                                %span.gallery-icon
                                  %i.fa.fa-search-plus.fa-2x
