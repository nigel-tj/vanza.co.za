.container
  .row
    .col-md-12
      %h1 Albums
      %p= link_to "New Album", new_album_path
      - for album in @albums
        .col-md-4{:style => "height:250px"}
          = image_tag album.cover_url(:thumb) if album.cover?
          %p
            = link_to album.name, "admin_show_album/#{album.id}"
            %br/
            Tracks: #{album.tracks.size}
