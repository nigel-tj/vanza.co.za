.container
  %h1 Add New Artist
  = form_for @artist, html: { class: "form-horizontal"} do |f|
    = render 'shared/errors', object: @artist
    .form-group
      = f.label :name, :class => "control-label col-sm-2"
      .col-sm-10 
        = f.text_field :name, class: 'form-control', required: true
        %span.help-block Artst Name.
    .form-group
      = f.label :cover, :class => "control-label col-sm-2"
      .col-sm-10
        = f.file_field :cover
        %span.help-block Cover.
    .form-group
      = f.label :profile_picture, :class => "control-label col-sm-2"
      .col-sm-10
        = f.file_field :profile_picture
        %span.help-block Profile Picture.
    .form-group
      = f.label :category, :class => "control-label col-sm-2"
      .col-sm-10
        = f.select "category", [["Select category","none"],["Model","model"], ["Label","label"], ["Management","management"]]

    .form-group
      = f.label :email, :class => "control-label col-sm-2"
      .col-sm-10 
        = f.text_field :email, class: 'form-control', required: true
        %span.help-block Artist Email.
    .form-group
      = f.label :cell_number, :class => "control-label col-sm-2"
      .col-sm-10 
        = f.text_field :cell_number, class: 'form-control'
        %span.help-block Cellphone Number.
    .form-group
      = f.label :bio, :class => "control-label col-sm-2"
      .col-sm-10 
        = f.text_area :bio, class: 'form-control', required: true
        %span.help-block Artist Bio.
    .form-group
      .col-sm-offset-2.col-sm-10
        = f.submit class: 'btn btn-primary'

