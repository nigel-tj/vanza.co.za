%script{:src => "/scripts/masonry.pkgd.min.js", :type => "text/javascript"}
%script{:src => "/scripts/isotope.pkgd.min.js", :type => "text/javascript"}
%script{:src => "/scripts/isotope.init.js", :type => "text/javascript"}
#services
  .container
    .row
      .row.services
        .col-sm-12
          .row
            %h1 All Artists
            %p= link_to "New Artist", new_artist_path
            .grid
              -for artist in @artists
                .grid-item.grid-sizer.col-sm-4.servicebox.featured_club
                  .servicebox-image
                    %a.vid-item.pretty-photo{"data-gal" => "prettyPhoto[gallery-photo-thumb]", :href => "artists/#{artist.id}?#{artist.name}"}
                      %img{:alt => "#{artist.name}", :src => "#{artist.profile_picture_url(:thumb)}"}
                  .servicebox-inner
                    %p
                      #{artist.name}
                  .servicebox-inner
                    %p
                      = link_to "edit", edit_artist_path(artist) | 
                      = button_to 'delete', artist, confirm: 'Are you sure?', method: :delete



